@model Exercise1.Models.Student
<h1>Add a Student</h1>

<form asp-controller="Students" asp-action="Add" method="post">

    <div class="form-group">
        <label for="phoneNumber">Name:</label>
        <input type="text" id="name" name="name" class="form-control" title="name is not optional" required asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber" asp-for="PhoneNumber" class="form-control" pattern="\d{8}" title="Phone number must be 8 digits" required />
    </div>
    <div class="form-group">
        <label for="dateOfBirth">Date of Birth:</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" asp-for="DateOfBirth" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="address">Address : </label>
        <input type="text" id="address" asp-for="Address" name="address" class="form-control" required />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Add</button>
</form>

