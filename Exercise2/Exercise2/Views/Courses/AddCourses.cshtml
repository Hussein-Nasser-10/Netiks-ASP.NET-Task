@model Exercise1.Models.Course
<h1>ADD COURSE</h1>

<form asp-controller="Courses" asp-action="Add" method="post">

    <div class="form-group">
        <label for="phoneNumber">Name:</label>
        <input type="text" id="name" name="name" class="form-control" title="name is not optional" required asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="phoneNumber">Code :</label>
        <input type="text" id="Code" name="Code" asp-for="Code" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Credits">Credits:</label>
        <input type="text" id="Credits" name="Credits" asp-for="Credits" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Course</button>
</form>
